issn = {13541013},
journal = {Global Change Biology},
keywords = {Climate change,European birds,Land-use scenario,Natal dispersal,Shifts,Species distribution models,Species richness},
number = {3},
pages = {881--890},
title = {{The fate of European breeding birds under climate, land-use and dispersal scenarios}},
