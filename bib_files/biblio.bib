file = {:C\:/Users/romai/Documents/0-Recherche/Biblio/Zeng et al. - 2019 - Unknown - Contrasting diversity patterns of breeding Anatidae in the Northern and Southern Hemispheres.pdf:pdf},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {divergence,null model,phylogenetic and functional diversity,productivity seasonality,random forest model,standard effect size,taxonomic},
number = {17},
pages = {9990--10003},
title = {{Contrasting diversity patterns of breeding Anatidae in the Northern and Southern Hemispheres}},
