author = {Jiguet, Fr{\'{e}}d{\'{e}}ric and Gadot, Anne Sophie and Julliard, Romain and Newson, Stuart E. and Couvet, Denis},
doi = {10.1111/j.1365-2486.2007.01386.x},
file = {:C\:/Users/romai/Documents/0-Recherche/Biblio/Jiguet et al. - 2007 - Global Change Biology - Climate envelope, life history traits and the resilience of birds facing global change.pdf:pdf},
issn = {13541013},
journal = {Global Change Biology},
keywords = {Annual fecundity,Broad-scale monitoring,Brood number,Climate warming,Habitat specialist,Natal dispersal,Population trend,Thermal maximum},
number = {8},
pages = {1672--1684},
title = {{Climate envelope, life history traits and the resilience of birds facing global change}},
volume = {13},
