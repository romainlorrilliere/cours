doi = {10.1111/j.1365-2664.2010.01869.x},
file = {:C\:/Users/romai/Documents/0-Recherche/Biblio/Doxa et al. - 2010 - Unknown - Low-intensity agriculture increases farmland bird abundances in France.pdf:pdf},
